        <item name="android:scrollbarSize">10dip</item>
        
        <!-- Button -->
        <item name="android:buttonStyle">@style/LeWidget.Button</item>
        
        
        <!-- TextAppearance -->
        <item name="android:textAppearance">@style/LeTextAppearance</item>
        <item name="android:textAppearanceLarge">@style/LeTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/LeTextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/LeTextAppearance.Small</item>
        
        <!-- Dialog -->
        <item name="android:alertDialogTheme">@style/Theme.LeLauncher.Dialog.Alert</item>
        <item name="android:dialogTheme">@style/Theme.LeLauncher.Dialog</item>

        <!-- EditText -->
        <item name="android:editTextStyle">@style/LeWidget.EditText</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_holo_light</item>
        -->
    </style>
    
    <style name="Theme.LeLauncher.TransparentActionBar">
        <item name="android:actionBarStyle">@style/LeWidget.ActionBar.Transparent</item>
    </style>
    
    <style name="Theme.LeLauncher.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/LeDialogWindowTitle</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:buttonBarStyle">@style/LeButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/LeWidget.Button.Borderless.Small</item>

        <item name="android:textAppearance">@style/LeTextAppearance.Medium</item>
        <item name="android:textAppearanceInverse">@style/LeTextAppearance.Inverse</item>

        <item name="android:listPreferredItemPaddingLeft">16dip</item>
        <item name="android:listPreferredItemPaddingRight">16dip</item>
    </style>
    
    <style name="Theme.LeLauncher.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowTitleStyle">@style/LeDialogWindowTitle</item> -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    
    <!--PK_ID:SHORTCUT NUM DISPLAY AUTH:GECN1 DATE:2012-10-29 S  -->
    <style name="Theme.LeLauncher.Dialog.ShortcutAlert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/ShortcutDialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    <style name="Theme.LeLauncher.Dialog.Shortcut">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowNoTitle">true</item>
         <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>
    <!--PK_ID:SHORTCUT NUM DISPLAY AUTH:GECN1 DATE:2012-10-29 E  -->
    
    <!-- Variant of the holographic (light) theme with no action bar. -->
    <style name="Theme.LeLauncher.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Variant of the holographic (light) theme that has no title bar and fills
         the entire screen -->
    <style name="Theme.LeLauncher.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.LeLauncher.Panel">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.LeLauncher.SearchBar" parent="Theme.LeLauncher.Panel">
        <item name="android:actionModeBackground">@drawable/cab_background_top_holo_light</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_holo_light</item>
    </style>
    
    <style name="Theme.LeLauncher.CompactMenu">
        <!-- Menu/item attributes -->
        <item name="android:itemTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:listViewStyle">@android:style/Widget.Holo.Light.ListView</item>
        <item name="android:windowAnimationStyle">@style/Animation.DropDownUp</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="Theme.LeLauncher.Dialog.MinWidth">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Variation of Theme.Holo.Light.Dialog that does not include a title bar. -->
    <style name="Theme.LeLauncher.Dialog.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Variation of Theme.Holo.Light.Dialog.NoActionBar that has a nice minumum width for
         a regular dialog. -->
    <style name="Theme.LeLauncher.Dialog.NoActionBar.MinWidth">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Theme for a window that will be displayed either full-screen on
         smaller screens (small, normal) or as a dialog on larger screens
         (large, xlarge). -->
    <style name="Theme.LeLauncher.DialogWhenLarge" parent="@style/Theme.LeLauncher">
    </style>

    <!-- Theme for a window without an action bar that will be displayed either full-screen
         on smaller screens (small, normal) or as a dialog on larger screens
         (large, xlarge). -->
    <style name="Theme.Holo.Light.DialogWhenLarge.NoActionBar"
            parent="@style/Theme.LeLauncher.NoActionBar">
    </style>

