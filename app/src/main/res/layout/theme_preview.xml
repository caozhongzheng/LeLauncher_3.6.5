<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	>
	
<LinearLayout
    
    android:layout_width="@dimen/theme_preview_layout_width"
	android:layout_height="@dimen/theme_preview_layout_height" 
    android:gravity="top|center_horizontal"
    android:orientation="vertical">
    <!-- android:layout_width="match_parent"
    android:layout_height="match_parent"
    PK_ID:THEME ADPATER ALL DEVICES AUTH:GECN1 DATE:2012-12-7 S-->
    <RelativeLayout 
        android:layout_width="@dimen/theme_preview_image_width"
	    android:layout_height="@dimen/theme_preview_image_height" 
        android:layout_weight="1.0"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="8dp">
        
	    <ImageView
	        android:id="@+id/theme_preview"
            android:layout_weight="1.0"
	        android:layout_width="match_parent"
            android:layout_height="match_parent" 
	        android:scaleType="fitXY"
	        android:layout_gravity="center_horizontal"/>
	    <ImageView android:id="@+id/theme_selected"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/theme_preview"
	        android:visibility="invisible"
	        android:src="@drawable/mytheme_theme_on"/>
        
    </RelativeLayout>
 <!-- 
        android:layout_alignParentBottom="true"
        PK_ID:THEME ADPATER ALL DEVICES AUTH:GECN1 DATE:2012-12-7 S-->


    <TextView
        android:id="@+id/theme_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        
        android:padding="0dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/shortcut_dialog_button_textsize"/>

</LinearLayout>
   <ImageView
	        android:id="@+id/check_select"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/profile_checkbox_bg"
	        	        
	        /> 
</RelativeLayout>