<RelativeLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:layout_width="match_parent"  
  android:layout_height="match_parent">  
  
    <TextView  
        android:id="@+id/alpha"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:paddingLeft="@dimen/apps_list_alpha_padding_left"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="@dimen/apps_list_alpha_padding_top"
        android:paddingBottom="@dimen/apps_list_alpha_padding_bottom"  
        android:textColor="@color/apps_list_alpha_text_color"
        android:textSize="16sp"
        android:background="@drawable/apps_list_alpha_bg"  
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="visible" />  
