<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageicon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/pick_wallpaper"
            android:src="@drawable/ic_launcher_wallpaper" />

        <TextView
            android:id="@+id/text01"
            android:layout_toRightOf="@id/imageicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/pick_wallpaper"
            android:textColor="#000000"
            android:textSize="20sp" />
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/tvtitle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_to_more" />
    </RelativeLayout>
    
    
    <ImageView 
            android:id="@+id/imageView"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallpaper_gallery_background"
        android:orientation="vertical" >
        

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="-4dp" />

    </LinearLayout>

     <Button
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/wallpaper_instructions" />


  
</LinearLayout>
