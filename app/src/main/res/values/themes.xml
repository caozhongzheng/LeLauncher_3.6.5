        <item name="android:ringtonePreferenceStyle">@style/LePreference.RingtonePreference</item>
        <item name="android:preferenceLayoutChild">@layout/preference_child_holo</item>
        <item name="android:detailsElementBackground">@drawable/panel_bg_holo_light</item>
        
        <!-- TextView -->
        <item name="android:listSeparatorTextViewStyle">@style/LeWidget.TextView.ListSeparator</item>
        
        <!-- ListView -->
        <item name="android:listPreferredItemHeight">64dip</item>
        <item name="android:listPreferredItemHeightSmall">48dip</item>
        <item name="android:listPreferredItemHeightLarge">80dip</item>
        <item name="android:listDivider">@drawable/list_divider_holo_light</item>
        
