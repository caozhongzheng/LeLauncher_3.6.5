<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <ScrollView
        android:id="@+id/view_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" 
        android:layout_alignParentTop="true">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/com_lenovo_lsf_layout_loc" >

        <TextView
            android:id="@+id/myaccount_text_myaccount"
            style="@style/com_lenovo_lsf_head_text"
            android:text="@string/com_lenovo_lsf_myaccount_string_myaccount" />
    </LinearLayout>

    <LinearLayout style="@style/com_lenovo_lsf_layout_loc" 
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:id="@+id/myaccount_image_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/com_lenovo_lsf_line" 
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout 
        style="@style/com_lenovo_lsf_layout_loc" >

        <RelativeLayout style="@style/com_lenovo_lsf_myaccount_relative" >
            <TextView
                android:id="@+id/myaccount_text_account"
                style="@style/com_lenovo_lsf_text_middle"
                android:text="@string/com_lenovo_lsf_myaccount_string_account" />
            <TextView
                android:id="@+id/myaccount_text_accountinfo"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/myaccount_text_account"
                android:layout_toRightOf="@id/myaccount_text_account"
                android:text="@string/com_lenovo_lsf_myaccount_string_accountinfo" />
            

            
        </RelativeLayout>

        <RelativeLayout style="@style/com_lenovo_lsf_myaccount_relative" >
            
            <Button
                android:id="@+id/myaccount_button_verify"
                style="@style/com_lenovo_lsf_button_small_style"
                android:layout_alignParentRight="true"
                android:text="@string/com_lenovo_lsf_myaccount_string_verify" />

            <TextView
                android:id="@+id/myaccount_text_status"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_alignBaseline="@id/myaccount_button_verify"
                android:text="@string/com_lenovo_lsf_myaccount_string_status" />

            <TextView
                android:id="@+id/myaccount_text_statusinfo"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@id/myaccount_button_verify"
                android:layout_toRightOf="@id/myaccount_text_status" />

            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myaccount_layout_changepassword"
            style="@style/com_lenovo_lsf_myaccount_relative" >

            <Button
                android:id="@+id/myaccount_button_setpassword"
                style="@style/com_lenovo_lsf_button_small_style"
                android:layout_alignParentRight="true"/>
            
            <TextView
                android:id="@+id/myaccount_text_password"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_alignBaseline="@id/myaccount_button_setpassword"
                android:text="@string/com_lenovo_lsf_myaccount_string_password" />

            <TextView
                android:id="@+id/myaccount_text_passwordinfo"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@id/myaccount_button_setpassword"
                android:layout_toRightOf="@id/myaccount_text_password"/>            
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/com_lenovo_lsf_layout_loc" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myaccount_text_time"
                style="@style/com_lenovo_lsf_text_middle"
                android:text="@string/com_lenovo_lsf_myaccount_string_time" />

            <TextView
                android:id="@+id/myaccount_text_timeinfo"
                style="@style/com_lenovo_lsf_text_middle"
                android:layout_marginLeft="10dp"
                android:text="@string/com_lenovo_lsf_myaccount_string_timeinfo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true" >
             <Button
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/com_lenovo_lsf_myaccount_string_logout"/>
    </RelativeLayout>
    
</RelativeLayout>
