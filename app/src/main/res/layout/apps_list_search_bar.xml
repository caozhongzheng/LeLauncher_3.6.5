<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/apps_list_search_bar_height"
    >
    <TextView 
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|left"
        android:gravity="center_vertical|left"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="18sp"
        android:textColor="#ff878787"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="9dp"
        android:text="@string/apps_list_search_bar_hint"
        android:drawableLeft="@drawable/btn_search_icon"
        android:drawablePadding="3dp"
        android:background="@drawable/apps_list_search_bg"
        />
    <ImageButton    
        android:id="@+id/hawaii_button"    
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content"    
        android:background="#00000000"   
        android:visibility="gone" 
        android:src="@drawable/hawaii_button"
        android:layout_marginRight="@dimen/hawaii_button_right_padding"
        android:layout_gravity="right|center_vertical" />
</LinearLayout>