<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <ImageView
            android:id="@+id/weather_widget_details_content_layout_icon"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:alpha="0.5"
            android:gravity="center"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="2dp"
        android:orientation="vertical" >

        <TextView
	        android:id="@+id/weather_widget_details_content_layout_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxWidth="70dp"
	        android:gravity="center"
	        android:singleLine="true"
	        android:textColor="#88ffffff"
	        android:textSize="11dp" />
        
        <TextView
            android:id="@+id/weather_widget_details_content_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="70dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#88ffffff"
            android:textSize="11dp" />
        
        <TextView
            android:id="@+id/weather_widget_details_content_layout_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="70dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#88ffffff"
            android:textSize="11dp" />
    </LinearLayout>

</LinearLayout>