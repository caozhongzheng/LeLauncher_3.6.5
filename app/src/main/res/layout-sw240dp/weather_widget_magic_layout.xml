<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >
   <ImageView
        android:id="@+id/weather_widget_layout"
        android:minHeight="145dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        />
       <TextView
     	android:id="@+id/weather_widget_city_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="115dp"
        android:shadowDx="0.5"
		android:shadowDy="0.5"
		android:shadowRadius="0.8"
		android:text="@string/weaher_city_nul_empty"
		android:shadowColor="@android:color/black"
        android:textSize="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
        <ImageView
        android:id="@+id/weather_widget_day_icon"
        android:minWidth="86dp"
        android:minHeight="89dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <LinearLayout android:id="@+id/weather_widget_day_details_layout"
            	android:layout_marginLeft="13dp"
            	android:layout_marginTop="75dp"
            	android:orientation="vertical"
	            android:layout_width="71dp" 
	            android:layout_height="wrap_content">
			<TextView
		        	android:id="@+id/weather_widget_day_city"
		        	android:maxWidth="71dp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:shadowDx="0.5"
					android:shadowDy="0.5"
					android:shadowRadius="0.8"
					android:layout_marginTop="4dp"
					android:shadowColor="@android:color/black"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"
					android:fadingEdgeLength="10dp"
		            android:textSize="17dp"/>
		    <TextView
		        	android:id="@+id/weather_widget_day_content"
		        	android:maxWidth="71dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:textSize="14dp"
		            android:shadowDx="0.5"
					android:shadowDy="0.5"
					android:layout_marginTop="-3dp"
					android:shadowRadius="0.8"
					android:focusable="true"
					android:shadowColor="@android:color/black"
					android:focusableInTouchMode="true"
					android:duplicateParentState="true">
					</TextView> 
		    <TextView
		        	android:id="@+id/weather_widget_day_temp"
		        	android:maxWidth="71dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:layout_marginTop="-3dp"
		            android:shadowDx="0.5"
					android:shadowDy="0.5"
					android:shadowRadius="0.8"
					android:shadowColor="@android:color/black"
		            android:textSize="14dp"/>
	    </LinearLayout> 
	    <RelativeLayout
        android:id="@+id/weather_widget_time_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
		<ImageView
        	android:id="@+id/weather_widget_time_bg"
        	android:minHeight="89dp"
        	android:layout_alignParentRight="true"
      		android:layout_width="220dp"
       		android:layout_height="wrap_content"/>
		    <LinearLayout android:id="@+id/weather_widget_time_num_layout"
		    android:layout_marginRight="28dp"
		    android:layout_marginTop="22dp"
		    android:layout_alignParentRight="true"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"> 
	        	<RelativeLayout
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">  
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_00"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_10"
		        	android:layout_alignBaseline="@+id/weather_widget_time_num_00"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
	        	</RelativeLayout>
	        	<RelativeLayout
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">  
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_01"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
			        android:layout_marginLeft="5dp"/>
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_11"
		        	android:layout_alignBaseline="@+id/weather_widget_time_num_01"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	        		android:layout_marginLeft="5dp"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
	        	</RelativeLayout>
	        	<ImageView
	        	android:id="@+id/weather_widget_time_num_colon"
	        	android:minWidth="5dp"
        		android:minHeight="48dp"
       			android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
		        android:layout_marginLeft="6dp"/>
	        	<RelativeLayout
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">  
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_02"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
			        android:layout_marginLeft="7dp"
			        />
		        	<ImageView
		        	android:id="@+id/weather_widget_time_num_12"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
	        		android:layout_marginLeft="7dp"
	        		android:layout_alignBaseline="@+id/weather_widget_time_num_02"
	       			android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
			        />
	        	</RelativeLayout>
	        	<RelativeLayout
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content">  
	        	<ImageView
	        	android:id="@+id/weather_widget_time_num_03"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
       			android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"/>
	        	<ImageView
	        	android:id="@+id/weather_widget_time_num_13"
		        	android:minWidth="38dp"
	        		android:minHeight="48dp"
        		android:layout_alignBaseline="@+id/weather_widget_time_num_03"
       			android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	        	</RelativeLayout>
	        </LinearLayout> 
            <LinearLayout 
            android:paddingRight="28dp"
            android:layout_below="@+id/weather_widget_time_num_layout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
	         <TextView
	        	android:id="@+id/weather_widget_day_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="right"
           		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	            android:textSize="10dp"/>
	         <TextView
	        	android:id="@+id/weather_widget_day_week"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="right"
           		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	            android:textSize="10dp"/>
	        </LinearLayout>
	   </RelativeLayout>
	   <ImageView
	       	android:id="@+id/weather_widget_time_apmp"
	    	android:minWidth="32dp"
        	android:minHeight="21dp"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="-4dp"
	        android:layout_marginTop="6dp"/>
	   <LinearLayout android:id="@+id/weather_widget_other_day_layout"
	       	android:layout_alignParentRight="true"
	       	android:layout_below="@+id/weather_widget_time_layout"
	        android:layout_width="226dp"
	        android:layout_marginRight="8dp"
	        android:layout_height="wrap_content">  

	  </LinearLayout>
	  <LinearLayout android:id="@+id/weather_widget_animation_layout"
	      	android:layout_marginLeft="8dp"
	      	android:layout_marginRight="8dp"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">  
	  </LinearLayout>
	  <ImageView
        android:id="@+id/weather_widget_other_info_switch"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
	    android:layout_below="@+id/weather_widget_time_layout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
   </RelativeLayout>
</RelativeLayout>