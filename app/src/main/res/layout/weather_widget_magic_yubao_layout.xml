<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/weather_widget_other0_day_layout"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"> 
	   <ImageView
	  	android:id="@+id/weather_widget_other0_day_icon"
		android:minWidth="39dp"
	  	android:minHeight="56dp"
	 	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"/>
	        <LinearLayout
	        android:layout_marginLeft="39dp"
	        android:orientation="vertical"
	        android:layout_marginTop="12dp"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content">   
	        <TextView
	        	android:id="@+id/weather_widget_other0_day_date"
	        	android:maxWidth="93dp"
	      		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textSize="11dp"/>

	        <TextView
	        	android:id="@+id/weather_widget_other0_day_temp"
	        	android:maxWidth="93dp"
	      		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textSize="11dp"/>
	        </LinearLayout>
	</RelativeLayout>
	<ImageView
      	android:id="@+id/weather_widget_other_day_line"
      	android:paddingLeft="-3dp"
      	android:minWidth="1dp"
      	android:minHeight="46dp"
     	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"/>
	        <RelativeLayout android:id="@+id/weather_widget_other1_day_layout"
		    android:layout_weight="1"
		    android:layout_width="0dp"
	        android:layout_height="wrap_content"> 
	        <ImageView
	       	android:id="@+id/weather_widget_other1_day_icon"
			android:minWidth="39dp"
	  		android:minHeight="56dp"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
	       <LinearLayout
	        android:layout_marginLeft="39dp"
	        android:orientation="vertical"
	        android:layout_marginTop="12dp"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content">   
	        <TextView
	        	android:id="@+id/weather_widget_other1_day_date"
	      		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	        	android:maxWidth="93dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textSize="11dp"/>
	        <TextView
	        	android:id="@+id/weather_widget_other1_day_temp"
	      		android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
				android:shadowColor="@android:color/black"
	        	android:maxWidth="93dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textSize="11dp"/>
	        </LinearLayout>
	</RelativeLayout>
</LinearLayout>