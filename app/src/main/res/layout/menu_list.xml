<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/menu_dialog_bg"
      android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:gravity="bottom"
     >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_bg"
    
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/menu_list_bottom"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_gravity="right"
    >
<!-- android:layout_gravity="bottom" android:orientation="vertical"-->

    <com.lenovo.launcher2.commonui.MenuGridView
        android:id="@+id/grid_item"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="6dp"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"
        android:focusable="false"
        android:numColumns="4" 
       />
<!-- android:gravity="center" -->
</LinearLayout>
</LinearLayout>