<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/weather_widget_square_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/weather_widget_square_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/weather_widget_square_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/weather_widget_square_time_0"
                    android:layout_width="32.3dp"
                    android:layout_height="52.3dp" />

                <ImageView
                    android:id="@+id/weather_widget_square_time_1"
                    android:layout_width="32.3dp"
                    android:layout_height="52.3dp" />

                <ImageView
                    android:id="@+id/weather_widget_square_colon"
                    android:layout_width="16.7dp"
                    android:layout_height="52.3dp" />

                <ImageView
                    android:id="@+id/weather_widget_square_time_2"
                    android:layout_width="32.3dp"
                    android:layout_height="52.3dp" />

                <ImageView
                    android:id="@+id/weather_widget_square_time_3"
                    android:layout_width="32.3dp"
                    android:layout_height="52.3dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/weather_widget_square_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/weather_widget_square_time_layout"
                android:layout_alignRight="@+id/weather_widget_square_time_layout"
                android:layout_marginRight="2dp"
                android:shadowColor="#88000000"
                android:shadowDx="0.0"
                android:shadowDy="2.0"
                android:shadowRadius="4.0"
                android:textSize="12dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/weather_widget_square_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3.5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/weather_widget_square_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:gravity="left"
                    android:shadowColor="#88000000"
                    android:shadowDx="0.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="4.0"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/weather_widget_square_time_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:shadowColor="#88000000"
                    android:shadowDx="0.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="4.0"
                    android:textSize="13.5dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/weather_widget_square_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0.6dp" >
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>