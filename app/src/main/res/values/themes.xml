        <item name="android:actionBarStyle">@style/LeWidget.ActionBar</item>
        <item name="android:actionBarSize">@dimen/action_bar_default_height</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:actionBarDivider">@null</item>
        
        <!-- Preference Style -->
        <item name="android:preferenceScreenStyle">@style/LePreference.PreferenceScreen</item>
        <item name="android:preferenceCategoryStyle">@style/LePreference.Category</item>
        <item name="android:preferenceStyle">@style/LePreference</item>
        <item name="android:preferenceInformationStyle">@style/LePreference.Information</item>
        <item name="android:checkBoxPreferenceStyle">@style/LePreference.CheckBoxPreference</item>
       <!--  <item name="android:switchPreferenceStyle">@style/LePreference.SwitchPreference</item> -->
        <item name="android:yesNoPreferenceStyle">@style/LePreference.DialogPreference.YesNoPreference</item>
        <item name="android:dialogPreferenceStyle">@style/LePreference.DialogPreference</item>
