<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:gravity="center_vertical"/>
<!-- android:layout_marginLeft="@dimen/addshortcut_textview_padding" -->
    <TextView
        android:id="@+id/app_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/workspace_cleanup_textview_padding"
        android:ellipsize="end"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/last_update_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/workspace_cleanup_textview_padding"
        android:layout_marginRight="@dimen/workspace_cleanup_textview_padding"
        android:padding="0dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <CheckBox
        android:id="@+id/app_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/btn_to_check"
        android:focusableInTouchMode="false" />
</LinearLayout>