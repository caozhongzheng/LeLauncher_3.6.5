<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/local_app_item_expandable_group"
    	android:baselineAligned="false"
    	android:background="@drawable/bg_download_manager_group"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
	<TextView
	    android:id="@+id/appsCount"
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:paddingLeft="@dimen/ljp_download_item_left_margin"
	    android:textColor="#313131"
	    android:textSize="12sp" />
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:src="@drawable/local_apps_list_item_split"/>
	<TextView
		android:id="@+id/upgradeAll"
		android:layout_width="58dip"
		android:layout_height="fill_parent"
		android:layout_marginTop="1dip"
		android:layout_marginBottom="1dip"
		android:layout_marginRight="5dip"
		android:gravity="center"
		android:text="@string/update_all"
		android:textColor="#434343"
		android:textSize="11sp"
		android:singleLine="true"
		android:background="@drawable/bg_white_button_selector" />
</LinearLayout>