<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
	android:id="@+id/weather_widget_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="0dip" 
	    android:layout_weight="1"
	    />
    <LinearLayout
    android:id="@+id/weather_widget_details_content_layout"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="2"
    android:background="@drawable/weather_widget_details_layout_bg"
    android:orientation="vertical"
    >
      <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip" 
	    android:layout_weight="1"
	    android:orientation="vertical"
	    > 
	    <TextView
	        android:id="@+id/weather_widget_details_content_city"
		    android:layout_width="match_parent"
		    android:layout_height="0dp" 
		    android:layout_weight="2"
		    android:textSize="20dp"
		    android:clickable="true"
		    android:gravity="center"
		    android:textColor="#ff111111"
		    />
	    <TextView
	        android:id="@+id/weather_widget_details_content_temp"
		    android:layout_width="match_parent"
		    android:layout_height="0dp" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textSize="11dp"
		    android:textColor="#ffE57D0D"
		    />
	    <TextView
	        android:id="@+id/weather_widget_details_content_wind"
		    android:layout_width="match_parent"
		    android:layout_height="0dp" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textSize="11dp"
		    android:textColor="#ff333333"
		    />
	    <TextView
	        android:id="@+id/weather_widget_details_content_date"
		    android:layout_width="match_parent"
		    android:layout_height="0dp" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="#ff333333"
		    android:textSize="11dp"
		    />
	    </LinearLayout> 
	    <ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/weather_h_line"
	    />
    	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    >
	    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center_vertical"
	    >
		    <TextView
		    android:id="@+id/weather_widget_details_content_index"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:layout_weight="1"
		    android:gravity="center_vertical|left"
		    android:textColor="#ff333333"
		    android:layout_marginLeft="30dp"
		    android:drawableLeft="@drawable/weather_cloths"
		    />
		    <TextView
		    android:id="@+id/weather_widget_details_content_index_uv"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:layout_weight="1"
		    android:gravity="center_vertical|left"
		    android:textColor="#ff333333"
		    android:layout_marginLeft="20dp"
		    android:drawableLeft="@drawable/weather_ultraviolet_ray"
		    
		    />
	    </LinearLayout> 
	    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center_vertical"
    	>
		    <TextView
		    android:id="@+id/weather_widget_details_content_index_xc"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:layout_weight="1"
		    android:gravity="center_vertical|left"
		    android:textColor="#ff333333"
		    android:layout_marginLeft="30dp"
		    android:drawableLeft="@drawable/weather_pollution"
		    />
		    <TextView
		    android:id="@+id/weather_widget_details_content_index_tr"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:layout_weight="1"
		    android:gravity="center_vertical|left"
		    android:textColor="#ff333333"
		    android:layout_marginLeft="20dp"
		    android:drawableLeft="@drawable/weather_ktk"
		    />
    	</LinearLayout> 

    	</LinearLayout> 
    	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/weather_h_line"
	    />
        <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	>
        <include 
        layout="@layout/weather_widget_details_content_layout"
        android:id="@+id/weather_widget_details_content_weather_num0"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
            />
        <include 
        android:id="@+id/weather_widget_details_content_weather_num1"
        layout="@layout/weather_widget_details_content_layout"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
            />
        <include 
        android:id="@+id/weather_widget_details_content_weather_num2"
        layout="@layout/weather_widget_details_content_layout" 
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
            />
        </LinearLayout>
    </LinearLayout>
   	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="0dip" 
	    android:layout_weight="1"
	    />
    </LinearLayout>

</RelativeLayout>
