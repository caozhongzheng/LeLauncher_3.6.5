<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:id="@+id/app_container_1"
        android:layout_width="359px"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/app_shader_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/app_icon_1"
            android:layout_width="@dimen/ljp_app_icon_size"
            android:layout_height="@dimen/ljp_app_icon_size"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/push_app_icon_def" />

        <TextView
            android:id="@+id/app_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/app_icon_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/app_icon_1"
            android:textColor="#434343"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textSize="@dimen/ljp_push_app_name_size"/>

        
        <TextView
            android:id="@+id/app_download_count_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name_1"
            android:layout_alignLeft="@id/app_name_1"
            android:textSize="@dimen/ljp_push_app_download_cont"
            android:textColor="#949494"/>

        <TextView
            android:id="@+id/app_download_1"
            android:layout_width="@dimen/ljp_app_icon_size"
            android:layout_height="@dimen/ljp_app_download_buton_heigth"
          	android:layout_below="@id/app_icon_1"
			android:gravity="center"
			android:layout_marginLeft="5dp"
            android:text="@string/app_detail_download"
            android:textColor="@color/push_download_text"
            android:textSize="@dimen/ljp_app_download_text_size"/>
        <RatingBar
            android:id="@+id/app_star_1"
            style="@style/pushAppStartBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/app_download_1"
			android:layout_below="@id/app_icon_1"
			android:layout_marginLeft="@dimen/ljp_push_app_ratingbar_left"
			android:layout_marginTop="5dp"
            android:numStars="5"
            android:rating="3"/>
    </RelativeLayout>

    <View android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/push_list_divider"/> 
    <RelativeLayout
        android:id="@+id/app_container_2"
        android:layout_width="359px"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/app_shader_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/app_icon_2"
            android:layout_width="@dimen/ljp_app_icon_size"
            android:layout_height="@dimen/ljp_app_icon_size"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/push_app_icon_def" />
        
       

        <TextView
            android:id="@+id/app_name_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/app_icon_2"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/app_icon_2"
            android:textColor="#434343"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textSize="@dimen/ljp_push_app_name_size"/>

        <TextView
            android:id="@+id/app_download_count_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name_2"
            android:layout_alignLeft="@id/app_name_2"
            android:textSize="@dimen/ljp_push_app_download_cont"
            android:textColor="#949494"/>

        <TextView
            android:id="@+id/app_download_2"
            android:layout_width="@dimen/ljp_app_icon_size"
            android:layout_height="@dimen/ljp_app_download_buton_heigth"
            android:layout_below="@id/app_icon_2"
            android:layout_marginLeft="5dp"
            android:text="@string/app_detail_download"
            android:textColor="@color/push_download_text"
            android:textSize="@dimen/ljp_app_download_text_size"
            android:gravity="center"/>
        <RatingBar
            android:id="@+id/app_star_2"
           style="@style/pushAppStartBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@id/app_download_2"
			android:layout_below="@id/app_icon_2"
			android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:layout_marginLeft="@dimen/ljp_push_app_ratingbar_left"
			android:layout_marginTop="5dp"/>
    </RelativeLayout>
</LinearLayout>