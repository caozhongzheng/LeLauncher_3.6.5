<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/preview_border"
    android:orientation="vertical" >
	
	<ImageView 
	    android:id="@+id/previewDelImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/preview_del"/>
	<ImageView 
	    android:id="@+id/previewhomeImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="6px"
	    android:background="@drawable/preview_home_btn"/>
	
	    <ImageView 
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@id/previewhomeImage"
        android:layout_below="@id/previewDelImage"
        android:scaleType="centerInside"
        />
	
</RelativeLayout>