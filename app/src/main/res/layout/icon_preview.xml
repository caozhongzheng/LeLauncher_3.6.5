<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView 
        android:id="@+id/style_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="0dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"/>
    
    <TextView
        android:id="@+id/style_icon_name"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#ff2f2f2f"
        android:textSize="@dimen/shortcut_text_size"
        android:layout_below="@id/style_icon"
        android:layout_alignRight = "@id/style_icon"
        android:layout_alignLeft = "@id/style_icon"
        android:layout_marginLeft="0dp"
         />
    
    <ImageView 
        android:id="@+id/select_icon"
        android:src="@drawable/app_add_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight = "4dp"
        android:paddingBottom = "3dp"
        android:layout_alignBottom = "@id/style_icon"
        android:layout_alignRight = "@id/style_icon"
        android:visibility="invisible"/>
                
</RelativeLayout>
