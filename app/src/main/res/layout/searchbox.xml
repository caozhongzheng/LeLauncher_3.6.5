<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/searchbox_bg"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/searchbox_keyword"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:maxLength="20"
        android:background="@drawable/searchbox_keyword"
        android:drawableLeft="@drawable/searchbox_search_icon"
        android:drawablePadding="4dp"
        android:hint="@string/search_box_keyword_hint"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:inputType="textCapWords"
        android:minHeight="48dip"
        android:paddingLeft="8dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF878787"
        android:textSize="18sp" />

    <Button
        android:background="@drawable/searchbox_go"
        android:id="@+id/searchbox_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF878787"
        android:text="@string/search_box_go"
        android:textSize="18sp"
        />

</LinearLayout>