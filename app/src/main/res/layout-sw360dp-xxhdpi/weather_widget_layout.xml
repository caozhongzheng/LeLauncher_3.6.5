<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<ImageView
        android:id="@+id/weather_widget_magic_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        />
	<ImageView
        android:id="@+id/weather_widget_magic_icon"
        android:layout_width="127dp"
        android:layout_height="85dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        />
	<LinearLayout
		android:id="@+id/weather_widget_magic_layout"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:paddingBottom="30dp"
		android:paddingLeft="16dp"
		android:gravity="left|bottom"
		android:orientation="vertical"
		android:layout_marginLeft="15dp">
	
		<TextView
			android:id="@+id/weather_widget_magic_location"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="100dp"
			android:gravity="left"
			android:textSize="18dp"
			android:shadowColor="@android:color/black"
			android:shadowDx="0.5"
			android:shadowDy="0.5"
			android:shadowRadius="0.8"
	
			android:singleLine="true"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:duplicateParentState="true">
		</TextView>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="0.6dp">
			<TextView
				android:id="@+id/weather_widget_magic_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxWidth="70dp"
				android:gravity="left"
				android:textSize="14dp"
				android:shadowColor="@android:color/black"
				android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8"
	
				android:singleLine="true"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:duplicateParentState="true">
			</TextView>
	
			<TextView
				android:id="@+id/weather_widget_magic_temperature"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:gravity="left"
				android:textSize="14dp"
				android:shadowColor="@android:color/black"
				android:shadowDx="0.5"
				android:shadowDy="0.5"
				android:shadowRadius="0.8">
			</TextView>
		</LinearLayout>
		
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/weather_widget_magic_time_and_date"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:paddingBottom="30dp"
	    android:background="#00000000"
	    android:layout_alignParentRight="true"
	    android:gravity="right|bottom"
	    android:orientation="vertical"
	    >
		<LinearLayout
			android:id="@+id/weather_widget_magic_time"
			android:layout_marginRight="35dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingBottom="2dp"
			>
			<ImageView
				android:id="@+id/weather_widget_magic_time_0"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			<ImageView
				android:id="@+id/weather_widget_magic_time_1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			<ImageView
				android:id="@+id/weather_widget_magic_colon"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			<ImageView
				android:id="@+id/weather_widget_magic_time_2"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			<ImageView
				android:id="@+id/weather_widget_magic_time_3"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				/>
			
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginRight="40dp"
			>
		
		    <TextView
		        android:id="@+id/weather_widget_magic_time_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="8dp"
		        android:textSize="14dp"
		        android:gravity="right"
		        android:shadowColor="@android:color/black"
		        android:shadowDx="0.5"
		        android:shadowDy="0.5"
		        android:shadowRadius="0.8"
		        />
		    
			<TextView
		        android:id="@+id/weather_widget_magic_time_week"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14dp"
		        android:gravity="right"
		        android:shadowColor="@android:color/black"
		        android:shadowDx="0.5"
		        android:shadowDy="0.5"
		        android:shadowRadius="0.8" 
		        />
		</LinearLayout>
		
	</LinearLayout>
	
    <TextView
        android:id="@+id/weather_widget_magic_am_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="13dp"
        android:textSize="12dp"
        android:layout_alignRight="@+id/weather_widget_magic_time_and_date"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="0.8"
        />
	<TextView
        android:id="@+id/weather_widget_magic_cmmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="0.8"
        />    	    
</RelativeLayout>
