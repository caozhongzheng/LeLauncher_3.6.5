            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:clickable="false"
             />
    </RelativeLayout>
    <!-- 右下叶子 -->
    <RelativeLayout
        android:id="@+id/rightdown_part"
        android:background="@drawable/lotus_rightdown_selector"

        android:layout_marginLeft="144dp"
        android:layout_marginTop="140dp"
        android:layout_width="144dp"
        android:layout_height="140dp"

        android:clickable="true"
         >
        <TextView
            android:id="@+id/bottom_right"

            android:textSize="14sp"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:paddingTop="4dp"
            android:paddingBottom="32dp"

            android:text="@string/string_for_measure"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="#ffffffff"
            android:clickable="false"
             />
        <ImageView
            android:id="@+id/bottom_right_image"
            android:layout_above="@id/bottom_right"
            android:src="@drawable/lotus_for_others"

            android:layout_height="58dp"

            android:scaleType="centerInside"
            android:layout_width="wrap_content"
