<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/ljp_help_width"
    android:minHeight="@dimen/ljp_help_height"
    android:background="@drawable/about_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <!--
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83px"
        android:paddingBottom="5px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="5px" >
    -->


    <!--
             <ImageView
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/hawaii_about"
        
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/about_t"
        android:textColor="#313131"
        android:textSize="@dimen/ljp_help_text_size_title" />
    <!-- </LinearLayout> -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/list_deliver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/about_android"
        android:textColor="#313131"
        android:textSize="@dimen/ljp_help_text_size_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/about_version"
            android:textColor="#313131"
            android:textSize="@dimen/ljp_help_text_size_title" />

        <TextView
            android:id="@+id/about_version_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textColor="#313131"
            android:textSize="@dimen/ljp_help_text_size_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/about_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/about_owner"
            android:textColor="#313131"
            android:textSize="@dimen/ljp_help_text_size_title" />

        <TextView
            android:id="@+id/about_owner_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="10sp"
            android:text="@string/about_owner_content"
            android:textColor="#313131"
            android:textSize="@dimen/ljp_help_text_size_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/about_features_new"
        android:textColor="#313131"
        android:textSize="@dimen/ljp_help_text_size_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/about_features_new_content"
        android:textColor="#313131"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/ljp_help_text_size_content" />

</LinearLayout>
