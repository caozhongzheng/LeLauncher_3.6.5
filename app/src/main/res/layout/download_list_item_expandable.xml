<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/download_apps_item"
    	android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--  
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/content_divider"/>
		-->
	
	<LinearLayout
    	android:id="@+id/download_apps_main"
    	android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:background="@drawable/bg_local_apps_list_item_selector"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/downloadContainer"
            android:layout_weight="1"
            android:layout_width="0dip"
		    android:layout_height="match_parent"
		    android:background="@drawable/bg_local_apps_list_item_selector"
		    android:orientation="horizontal">
		    <!--  
		    <ProgressBar android:id="@+id/app_icon"
				style="?android:attr/progressBarStyleHorizontal"
				android:background="@drawable/download_app_icon_def"
				android:progressDrawable="@drawable/progress_vertical"
				android:gravity="center"
				android:layout_gravity="center"
				android:max="100" 
		   	 	android:progress="0" 
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:layout_width="55dip"
				android:layout_height="55dip"/>
				--> 
            <ImageView
              android:id="@+id/app_icon"
              android:layout_width="55dip"
              android:layout_height="55dip"
              android:layout_marginLeft="5dip"
              android:layout_marginRight="5dip"
              android:gravity="center"
              android:layout_gravity="center"
              android:src="@drawable/download_app_icon_def" />
            <RelativeLayout  
              android:layout_weight="1"
              android:layout_width="0dip"
              android:layout_height="wrap_content">
              <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="0dip"
                android:singleLine="true"
                android:textColor="#434343"
                android:textSize="14dip" />
			  <TextView
                android:id="@+id/app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_name"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="1dip"
                android:singleLine="true"
                android:textColor="#939393"
                android:textSize="12dip" />
               <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_size"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:textColor="#939393"
                android:textSize="12dip" />
 
              <LinearLayout
                android:id="@+id/progress_view_layout"
	            android:layout_below="@id/app_name"
	            android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
	               <TextView
	                android:id="@+id/download_prosses_view"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginLeft="8dip"
	                android:layout_marginTop="1dip"
	                android:singleLine="true"
	                android:textColor="#939393"
	                android:textSize="12dip" />
               </LinearLayout>
               <ProgressBar  
		        android:id="@+id/download_prosses" 
		        android:layout_below="@id/progress_view_layout"
		     	android:layout_width="match_parent"  
		    	android:layout_height="8dip"  
		    	android:layout_marginLeft="8dip"
		    	android:layout_marginRight="8dip"
                android:layout_marginTop="5dip"
		    	style="?android:attr/progressBarStyleHorizontal" 
		    	android:progressDrawable="@drawable/local_apps_progress_bar_layer"
		    	android:max="100" 
		   	 	android:progress="0" 
		     	/>
             </RelativeLayout>
             <ImageView
         	     	android:id="@+id/option_arrow"
                 	android:layout_gravity="right"
			    	android:layout_width="wrap_content"
			    	android:layout_height="match_parent"
			    	android:paddingRight="8dip"
			    	android:src="@drawable/ic_arrow"/>
         </LinearLayout>
         
         <LinearLayout
            android:id="@+id/funcContainer" 
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="wrap_content" 
		    android:layout_height="match_parent">
            	<ImageView
            	    android:id="@+id/download_resume_split"
			    	android:layout_width="wrap_content"
			    	android:layout_height="match_parent"
			    	android:src="@drawable/local_apps_list_item_split"/>
		        <TextView
		            	android:id="@+id/download_resume"
		        		android:paddingTop="10dip"
		                android:layout_width="63dip"
		                android:layout_height="match_parent"
						android:gravity="center"
						android:textColor="#6a6a6a"
						android:textSize="14dip"
		                android:text = "@string/local_apps_upgrade"
		                android:background="@drawable/bg_local_apps_list_item_selector"
		                android:drawableTop="@drawable/ic_download_normal"
		                />
<!--  
             	<ImageView
			    	android:layout_width="wrap_content"
			    	android:layout_height="match_parent"
			    	android:src="@drawable/local_apps_list_item_split"/>
		        <TextView
		            	android:id="@+id/download_delete"
		        		android:paddingTop="10dip"
		                android:layout_width="60dp"
		                android:layout_height="match_parent"
						android:gravity="center"
						android:textColor="#202020"
						android:textSize="14dip"
		                android:text = "@string/download_delete"
		                android:background="@drawable/bg_local_apps_list_item_selector"
		                android:drawableTop="@drawable/ic_delete_normal"
		                />
-->
      	</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/download_app_item_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_apps_detail"
        android:orientation="vertical">
		<LinearLayout
	    android:id="@+id/download_app_item_option_1"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:gravity="center"
        android:orientation="horizontal">
        	<TextView
            	android:id="@+id/fun1"
                android:layout_width="106dip"
                android:layout_height="match_parent"
        		android:paddingTop="9dip"
				android:gravity="center"
				android:textColor="#202020"
				android:textSize="14dip" />
       		<TextView
            	android:id="@+id/fun2"
                android:layout_width="106dip"
                android:layout_height="match_parent"
                android:paddingTop="9dip"
                android:gravity="center"
                android:textSize="14dip"
                android:textColor="#202020" />

        	<TextView
                android:id="@+id/fun3"
                android:layout_width="106dip"
                android:layout_height="match_parent"
        		android:paddingTop="9dip"
                android:gravity="center"
                android:textSize="14dip"
                android:textColor="#202020" />

		</LinearLayout>
    	<LinearLayout
	    android:id="@+id/download_app_item_option_2"
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:gravity="left"
        android:orientation="horizontal">
             <TextView
            	android:id="@+id/fun4"
                android:layout_width="90dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dip"
        		android:paddingTop="9dip"
				android:gravity="center"
				android:textColor="#202020"
				android:textSize="14dip" />
             <TextView
                android:id="@+id/fun5"
                android:layout_width="90dip"
                android:layout_height="match_parent"
        		android:paddingTop="9dip"
                android:gravity="center"
                android:textSize="14dip"
                android:textColor="#202020" />
    	</LinearLayout>
    </LinearLayout>
</LinearLayout>